    "@nestjs/websockets": "^4.0.0",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.5",
    "indicative": "^3.0.0",
    "mysql2": "^1.4.2",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.0",
    "sequelize": "^4.11.0",
    "sequelize-typescript": "^0.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/chai": "^4.0.4",
    "@types/chai-http": "^3.0.3",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/reflect-metadata": "0.0.5",
    "@types/sequelize": "^4.0.74",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "source-map-support": "^0.4.18",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "nyc": {
    "include": [ "src/**/*.ts" ],
    "extension": [ ".ts" ],
    "reporter": [ "html" ],
    "all": true,
    "report-dir": "./coverage"
  }
}
